{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "assets": [
    {
      "include": "database/migrations/*.ts",
      "watchAssets": true,
      "outDir": "dist/src"
    },
    {
      "include": "knexfile.prod.ts",
      "watchAssets": true,
      "outDir": "dist"
    }
  ]
}
